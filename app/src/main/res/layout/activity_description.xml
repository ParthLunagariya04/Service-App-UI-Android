<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26.31dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/back_button_description"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginStart="21dp"
            android:background="@drawable/back_image"
            android:contentDescription="@string/todo1"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:fontFamily="@font/spartan_semi_bold"
            android:letterSpacing="-0.03"
            android:text="@string/description"
            android:textColor="#3E3C47"
            android:textSize="17sp" />

    </LinearLayout>

        <EditText
            android:id="@+id/editText_description"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginHorizontal="22dp"
            android:fontFamily="@font/spartan_medium"
            android:layout_marginTop="34dp"
            android:background="@drawable/rectangle1"
            android:elevation="5dp"
            android:gravity="top"
            android:hint="@string/description_of_the_professional_services_needed"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:padding="9dp"
            android:textColor="#3E3C47"
            android:textColorHint="#3E3C47"
            android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/submit_description_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="29dp"
            android:fontFamily="@font/spartan_semi_bold"
            android:letterSpacing="-0.01"
            android:layout_marginBottom="45dp"
            android:backgroundTint="#6B36BC"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:cornerRadius="10dp" />

    </LinearLayout>

</LinearLayout>