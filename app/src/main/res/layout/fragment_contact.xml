<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back_contact_button"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4.31dp"
            android:background="@drawable/back_image"
            android:contentDescription="@string/todo1"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:fontFamily="@font/spartan_semi_bold"
            android:layout_marginTop="57.5dp"
            android:textColor="#3E3C47"
            android:letterSpacing="-0.01"
            android:text="@string/contact_us"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="27dp"
            android:textSize="15sp"
            android:layout_marginTop="21dp"
            android:layout_gravity="center"
            android:fontFamily="@font/spartan_regular"
            android:textColor="#3D3D3D"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            android:text="@string/in_case_of_any_difficulty_or_queries_please_contact_us_on_the_details_below"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="53dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/person"/>

            <TextView
                android:id="@+id/name_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/spartan_medium"
                android:textColor="#757575"
                android:layout_marginStart="14dp"
                android:text="Rahul Jain"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/phone_call2"/>

            <TextView
                android:id="@+id/number_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#757575"
                android:fontFamily="@font/spartan_medium"
                android:layout_marginStart="14dp"
                android:text="+91 9078563389"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/email"/>

            <TextView
                android:id="@+id/email_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#757575"
                android:fontFamily="@font/spartan_medium"
                android:layout_marginStart="14dp"
                android:text="hvschkjdsbc@gmail.com"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/location"/>

            <TextView
                android:id="@+id/location_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/spartan_medium"
                android:textColor="#757575"
                android:layout_marginStart="14dp"
                android:text="Roshan Marg, Mumbai: 400067"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="452dp"
            android:background="@drawable/semi_transparent_image_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_marginTop="410dp"
            android:layout_marginStart="150dp"
            android:background="@drawable/semi_tranperant_image_pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>