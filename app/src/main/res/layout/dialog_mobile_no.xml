<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="26dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="45dp"
        app:cardCornerRadius="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_dialog_color"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/spartan_semi_bold"
                android:lineSpacingExtra="8dp"
                android:gravity="center"
                android:text="@string/please_enter_your_mobile_number_for_verification"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/spartan_semi_bold"
                android:text="@string/mobile_number_dialog"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/mobileNumber_dialog_ediText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:autofillHints="no"
                android:background="@drawable/rectangle1"
                android:elevation="5dp"
                android:fontFamily="@font/spartan_regular"
                android:hint="@string/enter_mobile_number"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="13dp"
                android:textColorHint="#AAACAE"
                android:textSize="13sp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/next_button_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="#FF7030"
                android:text="@string/next"
                android:fontFamily="@font/spartan_semi_bold"
                android:textAllCaps="false"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>